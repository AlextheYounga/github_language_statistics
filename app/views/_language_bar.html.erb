<div id="language-bar" class="rounded-lg shadow text-lg mx-auto lg:w-3/4 bg-white p-8">
  <h2 class="mb-3">Languages</h2>
  <span class="bar mb-4">
    <% languageStats.each do |lang, val| %>
      <span aria-label="<%= lang %> <%= val %>%" style="width: <%= val %>%" class="bar-item <%= lang.parameterize %>"></span>
    <% end %>
  </span>
  <ul>
    <% languageStats.each do |lang, val| %>
      <li class="lang-item">
        <div class="item-wrapper">
          <svg class="octicon <%= lang.parameterize %> octicon-dot-fill" viewbox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8z"></path>
          </svg>
          <span class="lang-name"><%= lang %></span>
          <span><%= val %>%</span>
        </div>
      </li>
    <% end %>
  </ul>
</div>
